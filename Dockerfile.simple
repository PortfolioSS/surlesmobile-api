FROM nginx:alpine
RUN echo '<!DOCTYPE html><html><body><h1>API Starting...</h1></body></html>' > /usr/share/nginx/html/index.html
RUN echo 'server { listen 8080; location / { root /usr/share/nginx/html; } location /health { return 200 "OK"; add_header Content-Type text/plain; } }' > /etc/nginx/conf.d/default.conf
EXPOSE 8080